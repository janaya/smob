# If you want to enable FOAF-SSL, uncommenting the following lines
# shoud work. If note, please read
# http://foaf.me/Enabling_SSL_Client_Certificates_on_Apache.php

#SSLVerifyClient optional_no_ca
#SSLVerifyDepth 1
#SSLOptions +StdEnvVars
#SSLOptions +ExportCertData

RewriteEngine on
# Fix the following line in the installer
RewriteBase /~alex/smob/client/

RewriteRule ^post/(.*)$ index.php?t=post&u=$1 [L,QSA]
RewriteRule ^user/(.*)$ index.php?t=user&u=$1 [L,QSA]
RewriteRule ^replies/(.*)$ index.php?t=replies&u=$1 [L,QSA]
RewriteRule ^resource/(.*)$ index.php?t=resource&u=$1 [L,QSA]
RewriteRule ^data/(.*)$ index.php?t=data&u=$1 [L,QSA]

RewriteRule ^follows$ index.php?t=follows [L,QSA]
RewriteRule ^followers(.*)$ index.php?t=followers [L,QSA]

RewriteRule ^ping/follower/(.*) ping.php?t=follower&u=$1 [L,QSA]
RewriteRule ^ping/item/(.*) ping.php?t=item&u=$1 [L,QSA]

